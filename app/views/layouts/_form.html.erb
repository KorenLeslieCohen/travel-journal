<div class="calc-modal">
  <div class="calc">
    <center>
    <div class="calc-body">
    </div>
    </center>
</div>

<h1>New Journal Entry</h1>
<p>Complete the form to create a new travel journal entry!</p>
<div class="new-journal-form">
<%= form_for Trip.new, url: "/trips" do |f| %>
  <% if Trip.new.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(Trip.new.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% current_user.trips.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :trip_name, "JOURNAL ENTRY NAME" %><br>
    <%= f.text_field :trip_name %>
  </div>
  <div class="field">
    <%= f.label :location, "TRIP LOCATION(S)" %><br>
    <%= f.text_field :location %>
  </div>
    <div class="field">
    <%= f.label :date, "DATE" %><br>
    <%= f.text_field :date, id: "trip-date" %>
  </div>
  <div class="field checkbox-field">
    <%= f.label :supplies, "THINGS I WANT TO PACK"%><br>
    <%= f.collection_check_boxes :supply_ids, Supply.all, :id, :name, {:item_wrapper_class => 'checkbox_container'}%>
  </div>
  <div class="field">
    <%= f.label :to_pack, "ADDITIONAL PACKING ITEMS" %><br>
    <%= f.text_field :to_pack %>
  </div>
  <div class="field">
    <%= f.label :to_do, "THINGS I WANT TO DO" %><br>
    <%= f.text_area :to_do %>
  </div>
  <div class="field">
    <%= f.label :budget, "TRIP BUDGET" %><br>
    <%= f.number_field :budget %>
    <%= f.hidden_field :user_id, :value => session["user_id"] %>
  </div>
  <h1>Trip Created!</h1>
  <div class="actions" class="submit">
    <%= f.submit "ADD TO JOURNAL" %>
  </div>
  <% end %>
</div>

</div>
