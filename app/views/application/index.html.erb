<center>
  <div id="index-cover" class="index-cover">
    <div id="none">
      <p><span>.</span></p>
    </div>
    <h1>My Travel Journal</h1>
    <h3>"We wander for distraction but we travel for fulfillment."</h3>
    <% if !current_user %>
      <a href="/auth/facebook"><%= image_tag "facebook.png", width: "200"%></a>
    <% else %>
      <p><%= link_to "Welcome back, #{current_user.name.split(" ")[0]}!", current_user %></p>
      <p>Happy travels!</p>
    <% end %>
  </div>
</center>


