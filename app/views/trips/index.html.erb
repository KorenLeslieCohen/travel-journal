<center>
<div class="index-trips">
<%= render 'layouts/header' %>

<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Trip name</th>
      <th>Location</th>
      <th>User</th>
      <th>To pack</th>
      <th>To do</th>
      <th>Budget</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.trip_name %></td>
        <td><%= trip.location %></td>
        <td><%= trip.user_id %></td>
        <td><%= trip.supplies %></td>
        <td><%= trip.to_do %></td>
        <td><%= trip.budget %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
</div>
</center>
