<div class="new-journal-form">
<%= form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :trip_name %>
    <%= f.text_field :trip_name %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
<div class="field">
    <%= f.label :to_pack %>
    <%= f.text_area :to_pack %>
  </div>
  <div class="field">
    <%= f.label :to_do %>
    <%= f.text_area :to_do %>
  </div>
  <div class="field">
    <%= f.label :budget %>
    <%= f.number_field :budget %>
      <%= f.hidden_field :user_id, :value => session["user_id"] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
